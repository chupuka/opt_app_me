@model ProForm.Models.Client
@{
    ViewData["Title"] = "Карточка клиента";
}

<div class="container-fluid">
    <h1>Карточка клиента</h1>
    <hr />

    <ul class="nav nav-tabs mb-4" id="clientTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="main-tab" data-bs-toggle="tab" data-bs-target="#main" type="button" role="tab">Основное</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="memberships-tab" data-bs-toggle="tab" data-bs-target="#memberships" type="button" role="tab">Абонементы</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="visits-tab" data-bs-toggle="tab" data-bs-target="#visits" type="button" role="tab">Посещения</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="payments-tab" data-bs-toggle="tab" data-bs-target="#payments" type="button" role="tab">Платежи</button>
        </li>
    </ul>

    <div class="tab-content" id="clientTabsContent">
        <!-- Вкладка Основное -->
        <div class="tab-pane fade show active" id="main" role="tabpanel">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ФИО клиента:</dt>
                        <dd class="col-sm-9">@Model.FullName</dd>

                        <dt class="col-sm-3">Дата рождения:</dt>
                        <dd class="col-sm-9">@(Model.DateOfBirth?.ToString("dd.MM.yyyy") ?? "Не указана")</dd>

                        <dt class="col-sm-3">Телефон:</dt>
                        <dd class="col-sm-9">@Model.Phone</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@(Model.Email ?? "Не указан")</dd>

                        <dt class="col-sm-3">Статус:</dt>
                        <dd class="col-sm-9">
                            @{
                                var statusClass = Model.Status == ClientStatus.Active ? "badge bg-success" : 
                                                 Model.Status == ClientStatus.Inactive ? "badge bg-secondary" : "badge bg-warning";
                                var statusText = Model.Status == ClientStatus.Active ? "Активный" : 
                                                Model.Status == ClientStatus.Inactive ? "Неактивный" : "Потенциальный";
                            }
                            <span class="@statusClass">@statusText</span>
                        </dd>
                    </dl>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="mt-3">
                            <a asp-action="Edit" asp-route-id="@Model.ClientId" class="btn btn-warning">Редактировать</a>
                            <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Вкладка Абонементы -->
        <div class="tab-pane fade" id="memberships" role="tabpanel">
            <div class="card">
                <div class="card-body">
                    @if (Model.Memberships.Any())
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Тип абонемента</th>
                                    <th>Дата начала</th>
                                    <th>Дата окончания</th>
                                    <th>Оставшиеся посещения</th>
                                    <th>Статус</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var membership in Model.Memberships.OrderByDescending(m => m.StartDate))
                                {
                                    <tr class="@(membership.IsActive ? "table-success" : "")">
                                        <td>@membership.MembershipType.Name</td>
                                        <td>@membership.StartDate.ToString("dd.MM.yyyy")</td>
                                        <td>@(membership.EndDate?.ToString("dd.MM.yyyy") ?? "Не ограничен")</td>
                                        <td>@(membership.RemainingVisits?.ToString() ?? "-")</td>
                                        <td>@(membership.IsActive ? "Активен" : "Неактивен")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">У клиента нет абонементов</p>
                    }
                </div>
            </div>
        </div>

        <!-- Вкладка Посещения -->
        <div class="tab-pane fade" id="visits" role="tabpanel">
            <div class="card">
                <div class="card-body">
                    @if (Model.ClassRegistrations.Any())
                    {
                        <div class="list-group">
                            @foreach (var registration in Model.ClassRegistrations.OrderByDescending(r => r.Class.StartTime))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@registration.Class.Title</h5>
                                        <small>@registration.Class.StartTime.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                    <p class="mb-1">Тренер: @(registration.Class.Trainer?.FullName ?? "Не назначен")</p>
                                    <small class="@(registration.Attended ? "text-success" : "text-muted")">
                                        @(registration.Attended ? "Посетил" : "Не посетил")
                                    </small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Нет записей о посещениях</p>
                    }
                </div>
            </div>
        </div>

        <!-- Вкладка Платежи -->
        <div class="tab-pane fade" id="payments" role="tabpanel">
            <div class="card">
                <div class="card-body">
                    @if (Model.Payments.Any())
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Дата</th>
                                    <th>Сумма</th>
                                    <th>Способ оплаты</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.Payments.OrderByDescending(p => p.PaymentDate))
                                {
                                    <tr>
                                        <td>@payment.PaymentDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@payment.Amount.ToString("C")</td>
                                        <td>@payment.PaymentMethod</td>
                                        <td>
                                            <a href="#" class="btn btn-sm btn-primary" onclick="printReceipt(@payment.PaymentId)">Печать квитанции</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Нет записей о платежах</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function printReceipt(paymentId) {
    window.open('/Reports/PrintReceipt/' + paymentId, '_blank');
}
</script>

