@model ProForm.Models.MembershipType
@{
    ViewData["Title"] = "Редактировать тип абонемента";
}

<div class="container">
    <h1>Редактировать тип абонемента</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MembershipTypeId" />
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Category" class="form-label"></label>
                    <select asp-for="Category" class="form-select" asp-items="Html.GetEnumSelectList<MembershipCategory>()" id="categorySelect"></select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                
                <div class="mb-3" id="durationDaysGroup">
                    <label asp-for="DurationDays" class="form-label"></label>
                    <input asp-for="DurationDays" type="number" class="form-control" />
                    <span asp-validation-for="DurationDays" class="text-danger"></span>
                </div>
                
                <div class="mb-3" id="visitCountGroup">
                    <label asp-for="VisitCount" class="form-label"></label>
                    <input asp-for="VisitCount" type="number" class="form-control" />
                    <span asp-validation-for="VisitCount" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="AvailableServices" class="form-label"></label>
                    <textarea asp-for="AvailableServices" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="AvailableServices" class="text-danger"></span>
                </div>
                
                <div class="mb-3 form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label">Активен</label>
                </div>
                
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('categorySelect').addEventListener('change', function() {
            var category = this.value;
            var durationGroup = document.getElementById('durationDaysGroup');
            var visitGroup = document.getElementById('visitCountGroup');
            
            if (category == '0') { // TimeBased
                durationGroup.style.display = 'block';
                visitGroup.style.display = 'none';
            } else { // VisitBased
                durationGroup.style.display = 'none';
                visitGroup.style.display = 'block';
            }
        });
        // Инициализация при загрузке
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('categorySelect').dispatchEvent(new Event('change'));
        });
    </script>
}

